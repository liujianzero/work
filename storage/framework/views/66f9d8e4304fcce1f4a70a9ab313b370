	<script type="text/javascript" src="/E2.0/js/libs/jquery-2.1.1.js"></script>
	<script src="/themes/default/assets/js/layer/layer.js"></script>
	<script src="/themes/default/assets/js/models/jquery-2.1.4.js"></script>

		<script type="text/javascript">
			var oMenu = document.getElementById("menu"),
				oBtn = document.querySelector(".submenu-r a");
			var oClose = document.getElementById("close");
			var oPopup = document.querySelector(".warp");
			var oMain = document.getElementById("main"),
					aLi = oMenu.querySelectorAll(".submenu ul li a"),
					aMains = oMain.querySelectorAll(".mains"),
					length = aLi.length,
					index = 0;
			oBtn.onclick = function(){
				oPopup.style.display = "block";
			};
			oClose.onclick = function(){
				oPopup.style.display = "none";
			};

			for (var i = 0; i < length; i++) {
				aLi[i].goudan = i;
				aLi[i].onclick = function(){
					aLi[index].className ="";
					aMains[index].style.display ="none";
					index = this.goudan;
					aLi[index].className ="hov";
					aMains[index].style.display ="block";
//				for (var j = 0; j < length; j++) {
//					aLi[j].className = "";
//				}
//				aLi[this.goudan].className = "hov";
				}
			}

            //参赛作品提交
			$(".address_btn").click(function(){
                var login =  $('.login').val();
                if(login == 0){
                    layer.msg('请先登录');
                    window.location.href = "<?php echo e(url('/login')); ?>";
                }else{
                    var address = $('.cs_address').val();
                    if(address){
                        if (address.match(/^(http[s]?|ftp):\/\/[w{3}.zwuvr.com\/view-]+[0-9]{0,4}$/i) == null){
                            layer.alert('地址格式必须为http://www.zwuvr.com/view-123的官网网址')
                        }else{
							$.ajax({
								type : 'post',
								headers : {'X-CSRF-TOKEN' : $('meta[name="csrf-token"]').attr('content')},
								url : '/bre/match',
								data : {
									address : address
								},
								dataType : 'json',
								success : function(data) {
									if (data.result) {
										$('.warp').css({display:'none'});
//									alert('成功');
										layer.msg(data.message);
									} else {
//									alert('失败');
										$('.warp').css({display:'none'});
										layer.msg(data.message);
//									layer.close(index);
									}
								}
							});
                        }
                    }else{
                        layer.msg('参赛地址不可以为空');
                    }
				}
			});
		</script>


