	<div class="warp">
		<div class="popup">
			<form action="" method="post" onkeydown="if(event.keyCode == 13) return false;">
			<span class="img" id="close"><img src="<?php echo Theme::asset()->url('images/click.png'); ?>"/></span>
			<label>参赛地址：<input type="text" name="address" class="name cs_address" placeholder="请输入参赛地址"/></label>
			<span class="promt">
				提示：<i>请上传本站网址，且必须是本人作品！</i>
			</span>
			<input type="button" value="提交" class="btn1 address_btn" id=""/>
			</form>
		</div>
